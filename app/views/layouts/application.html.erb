<!DOCTYPE html>
<html>
  <head>
    <title>PrivateEvents</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="notification is-primary global-notification text-light text-center">      
      <%= error_flashes %>
    </div>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Private Events</a>     
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">      
            <li class="nav-item ">                        
              <a class="nav-link text-dark" href="/events">Events</a>
            </li> 
            <li class="nav-item">               
              <a class="nav-link text-dark" href="/users">Users</a>  
            </li>
            <li class="nav-item">               
              <a class="nav-link text-dark" href="/sessions/new">Sign in</a>  
            </li>
            <li class="nav-item">               
              <a class="nav-link text-dark" href="/users/new">Sign up</a>  
            </li>
            <li class="nav-item">    
              <%= link_to 'Logout', logout_path,
              data: { confimation: 'are you sure?' },
              class: 'nav-link text-dark' %> 
            </li>         
          </ul>
        </div>
    </nav>

    <%= yield %>
  </body>
</html>
