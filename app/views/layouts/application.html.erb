<!DOCTYPE html>
<html>
  <head>
    <title>PrivateEvents</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="notification is-primary global-notification text-light text-center m-0">      
      <%= error_flashes %>
    </div>
    <nav class="navbar navbar-expand-lg navbar-light bg-dark m-0">
        <a class="navbar-brand text-light" href="#">Private Events</a>     
       
        <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
          <ul class="navbar-nav">      
            <li class="nav-item ">                        
              <a class="nav-link text-light" href="/events">Events</a>
            </li> 
            <li class="nav-item">               
              <%= signin_users %>
            </li>
            <li class="nav-item">               
              <%= login_logout %>
            </li>
                  
          </ul>
          <span class="navbar-text ">
            <%= name_use %>
          </span>
        </div>
    </nav>

    <%= yield %>
  </body>
</html>
